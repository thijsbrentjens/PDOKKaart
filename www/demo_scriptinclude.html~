<html>
<head>
<title>Demo javascript include</title>

    <style type="text/css">
      #map {
          width: 50%;
          height: 80%;
      }
      </style>

	<script>
		// uit te voeren na init();
		function customInit() {
			navigator.geolocation.getCurrentPosition(showLocation);			
		}
		function showLocation(position){
			var lat = position.coords.latitude;
			var lon = position.coords.longitude;
			// Thijs: en hier pakken we de PDOK Kaart erbij via de API.	
			var map = pdokkaart.getMapObject();
			
			pointRD = pdokkaart.reprojectWGS84toRD(lat,lon);
			X = pointRD.lon;
			Y = pointRD.lat;
			pdokkaart.setLocation([parseInt(X),parseInt(Y)]);
		}
	</script>
<!-- plak hier de kaart code voor de Head -->
<script src="http://nieuwsinkaart.nl/pdok/kaart/api/OpenLayers.js"></script><script src="http://nieuwsinkaart.nl/pdok/kaart/api/js/proj4js-compressed.js"></script><script src="http://nieuwsinkaart.nl/pdok/kaart/api/lusc-api.js"></script><script src="http://nieuwsinkaart.nl/pdok/kaart/js/jquery.js"></script><link rel="stylesheet" href="http://nieuwsinkaart.nl/pdok/kaart/api/styles/default/style.css" type="text/css"><link rel="stylesheet" href="http://nieuwsinkaart.nl/pdok/kaart/api/style.css" type="text/css">    <script>    function createPDOKKaart() {        var api = new Lusc.Api({		    loc: [168171.2,415469.44],		    layer: 'AAN',		    mloc: [168587.84,415415.68],		    externalGraphic: 'http://nieuwsinkaart.nl/pdok/kaart/api/markertypes/information_blue.png',		    pointRadius: 20,		    titel: 'Title en zo',		    tekst: 'Een omschrijving bij de marker',		    zl: 9		});		return api    }    </script>


